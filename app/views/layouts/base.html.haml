!!!
%html
  %head
    %title= raw [@page_title, Settings.app_name].join(' ~ ')
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'smoothness/jquery-ui-1.8.13.custom', :media => 'screen, projection'
    = csrf_meta_tag
  %body
    #root
      #header
        #top_menu
          .wrapper
            %ul
              - if logged_in?
                %li= current_user
                %li= link_to 'Log out', session_path, :method => :delete
            .logo= Settings.app_name

        = yield :main_menu
        #sub_menu
          .wrapper
            = yield :sub_menu
      #middle
        .wrapper
          = render 'shared/flash_message'
          #main
            #page_header
              = yield :page_header
              %h1= @page_title
            = yield
      #root_footer
    = render 'layouts/footer'
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery.hint', 'jquery.elastic.source'
    = yield :tail
