- @page_title = "Fragrance: #{@fragrance}"

- if @formulation_version.current? && !@formulation_version.draft? && (draft_version = @fragrance.draft_version).present?
  .notice
    == View #{link_to 'Draft version', fragrance_path(@fragrance, { :version => :draft })} saved on #{draft_version.updated_at.to_s(:short)}

- if !@formulation_version.current?
  .notice
    == You are viewing an older version of this formulation. Switch to the #{link_to 'current version', @fragrance} (published on #{@fragrance.published_at.to_s(:short)})

%ul.buttons
  - unless @formulation_version.current?
    %li
      = link_to "&laquo; Current version".html_safe, @formulation, :class => 'primary'
  - if @formulation_version.current? || @formulation_version.draft?
    %li= link_to "Edit", [:edit, @fragrance], :class => 'primary'
  - if @formulation_version.draft?
    %li= link_to "Publish", [:publish, @fragrance], :method => :put
  %li.select
    %a More
    %ul
      %li= link_to "View History", [@fragrance, :formulation_versions]
      %li= link_to "Copy", new_fragrance_path(:copy_of_id => @formulation_version.id)

= render :partial => 'formulation_versions/header', :locals => { :formulation_version => @formulation_version }
= render :partial => 'formulation_versions/items', :locals => { :items => @items }
