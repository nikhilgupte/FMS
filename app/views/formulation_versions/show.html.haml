- @page_title = @formulation

- if !@formulation_version.current?
  .notice== You aren't viewing the current version of this formulation. Switch to the #{link_to('current version', @formulation)}

= render 'shared/price_preferences_form'
%ul.buttons
  - if @formulation_version.draft?
    %li= link_to "Edit", [:edit, @formulation_version], :class => "primary #{'disabled' if @formulation_version.published?}"
    %li= link_to "Publish", [:publish, @formulation_version], :method => :put, :confirm => 'Really publish this version?'
  %li= link_to "New Version", new_fragrance_formulation_version_path(@formulation, :version_id => @formulation_version.id)
  %li.select
    %a More
    %ul
      %li= link_to "Show All Versions (#{@formulation.versions.count})", [@formulation, :formulation_versions]
      %li= link_to "Copy", new_fragrance_path(:copy_of_id => @formulation_version.id)

= render :partial => 'formulation_versions/header', :locals => { :formulation_version => @formulation_version }
= render :partial => 'formulation_versions/items', :locals => { :formulation_version => @formulation_version }
