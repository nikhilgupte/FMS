= form_for @user_session ||= UserSession.new, :url => session_path do |f|
  = f.error_messages
  %fieldset
    %ol
      %li
        = f.label :email, 'Email Address'
        = f.text_field :email, :style => 'width: 260px'
      %li
        = f.label :password
        = f.password_field :password, :style => 'width: 260px'
      %li
        = f.check_box :remember_me
        = f.label :remember_me
        %span.quiet You will not be asked to log-in the next time.

  %ul.buttons.pipes
    %li
      = f.submit 'Log in', :class => 'primary button'
    %li= link_to 'Forgot Password?', '#new_password_reset_path', :class => :todo
